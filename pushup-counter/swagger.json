{
  "swagger": "2.0",
  "info": {
    "title": "Pushup Counter API",
    "description": "A Simple API for counting pushups. No frills, all strength.",
    "contact": {
      "name": "Peter B Smith",
      "url": "http://twitter.com/peterbsmith",
      "email": "peterbutlersmith@gmail.com"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    },
    "version": "1.0"
  },
  "host": "localhost",
  "basePath": "/api",
  "schemes": ["http"],
  "paths": {
    "/pushups": {
      "post": {
        "tags": ["pushups"],
        "summary": "Add pushups for a user",
        "operationId": "addPushups",
        "produces": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "name": "pushup",
            "in": "body",
            "description": "Pushup record.",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Pushup"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "pushups added!"
          },
          "403": {
            "description": "forbidden"
          }
        },
        "security": [
          {
            "api_key": []
          }
        ]
      }
    },
    "/pushups/{id}": {
      "get": {
        "tags": ["pushups"],
        "summary": "Get a pushups record by id",
        "operationId": "getPushup",
        "produces": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of pushups record",
            "required": true,
            "type": "number"
          }
        ],
        "responses": {
          "200": {
            "description": "pushup got!",
            "schema": {
              "$ref": "#/definitions/Pushup"
            }
          },
          "403": {
            "description": "forbidden"
          }
        },
        "security": [
          {
            "api_key": []
          }
        ]
      },
      "put": {
        "tags": ["pushups"],
        "summary": "Update a pushups record by id",
        "operationId": "putPushup",
        "produces": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of pushups record",
            "required": true,
            "type": "number"
          },
          {
            "name": "pushup",
            "in": "body",
            "description": "Pushup record.",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Pushup"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "pushup record updated!"
          },
          "403": {
            "description": "forbidden"
          }
        },
        "security": [
          {
            "api_key": []
          }
        ]
      }
    },
    "/users/{id}": {
      "get": {
        "tags": ["users"],
        "summary": "get user by id",
        "operationId": "getUser",
        "produces": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "id of user",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "user got!",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "403": {
            "description": "forbidden"
          }
        }
      }
    },
    "/signup": {
      "post": {
        "tags": ["auth"],
        "summary": "create a new user",
        "operationId": "newUser",
        "produces": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "new user to add to the system",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "user created!"
          },
          "400": {
            "description": "bad request!"
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": ["auth"],
        "summary": "login as user",
        "operationId": "loginUser",
        "produces": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "user to login to system",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "logged in!",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      }
    },
    "/types": {
      "get": {
        "tags": ["types"],
        "summary": "get a list of types",
        "operationId": "getTypes",
        "produces": [
          "application/json",
          "application/xml"
        ],
        "responses": {
          "200": {
            "description": "list of types",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Type"
              }
            }
          }
        }
      }
    },
    "/types/{id}": {
      "get": {
        "tags": ["types"],
        "summary": "get type by id",
        "operationId": "getType",
        "produces": [
          "application/json",
          "applicatin/xml"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "id of type",
            "required": true,
            "type": "number"
          }
        ],
        "responses": {
          "200": {
            "description": "got type by id",
            "schema": {
              "$ref": "#/definitions/Type"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Pushup": {
      "type": "object",
      "required": ["count", "date", "time", "type_id", "user_id"],
      "properties": {
        "count": {
          "type": "integer"
        },
        "date": {
          "type": "string",
          "format": "date"
        },
        "notes": {
          "type": "string"
        },
        "time": {
          "type": "integer"
        },
        "type_id": {
          "type": "integer"
        },
        "user_id": {
          "type": "string"
        }
      },
      "example": {
        "count": 10,
        "date": "2016-01-01",
        "notes": "that was easy",
        "time": 120000,
        "type_id": 1,
        "user_id": "user_101"
      }
    },
    "User": {
      "type": "object",
      "required": ["_id", "password"],
      "properties": {
        "_id": {
          "type": "string"
        },
        "password": {
          "type": "string",
          "format": "password"
        }
      },
      "example": {
        "_id": "User_101",
        "password": "A_veryStr0ngPa$$word!"
      }
    },
    "Type": {
      "type": "object",
      "required": ["id", "name"],
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        }
      },
      "example": {
        "id": 1,
        "name": "Standard Pushup"
      }
    }
  },
  "securityDefinitions": {
    "api_key": {
      "type": "apiKey",
      "description": "API key authorization",
      "name": "api_key",
      "in": "query"
    }
  },
  "tags": [
    {
      "name": "api"
    },
    {
      "name": "api-a-day"
    },
    {
      "name": "peterbsmith"
    }
  ]
}
